{
  "manifest_version": 2,
  "name": "Yandex Music Fisher",
  "description": "Скачивание музыки с сервиса Яндекс.Музыка",
  "version": "1.4.0",
  "permissions": [
    "tabs",
    "storage",
    "downloads",
    "downloads.shelf",
    "notifications",
    "https://api.github.com/",
    "https://music.yandex.ru/",
    "https://music.yandex.ua/",
    "https://music.yandex.kz/",
    "https://music.yandex.by/",
    "https://avatars.yandex.net/",
    "https://storage.mds.yandex.net/"
  ],
  "optional_permissions": [
    "background"
  ],
  "content_security_policy": "script-src 'self' https://www.google-analytics.com; object-src 'self'",
  "minimum_chrome_version": "45.0",
  "background": {
    "scripts": [
      "vendor/md5.min.js",
      "js/utils.js",
      "js/yandex.js",
      "js/storage.js",
      "js/downloader.js",
      "js/background.js"
    ],
    "persistent": true
  },
  "content_scripts": [
    {
      "js": [
        "js/content.js"
      ],
      "matches": [
        "https://music.yandex.ru/genre/*",
        "https://music.yandex.ua/genre/*",
        "https://music.yandex.kz/genre/*",
        "https://music.yandex.by/genre/*"
      ]
    }
  ],
  "options_page": "options/options.html",
  "options_ui": {
    "page": "options/options.html",
    "chrome_style": true
  },
  "browser_action": {
    "default_title": "Yandex Music Fisher",
    "default_popup": "popup/popup.html",
    "default_icon": "img/black.png"
  },
  "icons": {
    "16": "img/icon.png",
    "48": "img/icon.png",
    "128": "img/icon.png"
  },
  "homepage_url": "https://github.com/egoroof/yandex-music-fisher"
}
